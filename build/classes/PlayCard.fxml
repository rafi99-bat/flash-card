      </ImageView>
      <Pane prefHeight="587.0" prefWidth="783.0">
         <children>
            <Button fx:id="btExit" layoutX="674.0" layoutY="20.0" mnemonicParsing="false" onAction="#exitFunc" prefHeight="39.0" prefWidth="87.0" style="-fx-background-radius: 20;" text="EXIT" textFill="#f50707">
               <font>
                  <Font name="Calibri" size="23.0" />
               </font>
            </Button>
            <Button fx:id="btFile" layoutX="14.0" layoutY="20.0" mnemonicParsing="false" onAction="#fileFunc" prefHeight="36.0" prefWidth="76.0" style="-fx-background-radius: 30;" text="FILE" textFill="#2462b9">
               <font>
                  <Font name="Calibri" size="23.0" />
               </font>
            </Button>
            <Button fx:id="btHome" layoutX="103.0" layoutY="20.0" mnemonicParsing="false" onAction="#homeFunc" prefHeight="44.0" prefWidth="94.0" style="-fx-background-radius: 30;" text="HOME">
               <font>
                  <Font name="Calibri" size="23.0" />
